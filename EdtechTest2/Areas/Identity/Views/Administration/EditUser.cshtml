@model EditUserViewModel
@{
    ViewData["Title"] = "EditUser";
}

<h1>EditUser</h1>

<form class="mt-3">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input disabled asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input disabled asp-for="FirstName" class="form-control">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label disabled asp-for="LastName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input disabled asp-for="LastName" class="form-control">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label disabled asp-for="UniqueUserNameId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input disabled asp-for="UniqueUserNameId" class="form-control">
            <span asp-validation-for="UniqueUserNameId" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <label asp-for="DateofBirth" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input disabled asp-for="DateofBirth" class="form-control">
            <span asp-validation-for="DateofBirth" class="text-danger"></span>
        </div>
    </div><div class="form-group row">
        <label asp-for="JoinedOn" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input disabled asp-for="JoinedOn" class="form-control">
            <span asp-validation-for="JoinedOn" class="text-danger"></span>
        </div>
    </div><div class="form-group row">
        <label asp-for="PhoneNumber" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input disabled asp-for="PhoneNumber" class="form-control">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
    </div>



    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">

            <a asp-action="ListUsers" class="btn btn-primary">Back</a>
        </div>
    </div>



    <div class="row">







        @if (Model.Roles.Any())
        {
            foreach (var role in Model.Roles)
            {
                <div class="card   m-2" style="width: 18rem;">
                    <div class="card-header ">
                        @role
                    </div>

                </div>
                @*<h5 class="card-title">@role</h5>*@
            }
        }
        else
        {
            <div align="center">

                <h5 align="center" class="card-title p-5">None at the moment</h5>

            </div>
        }
    </div>
    <br />
    <br />
    <a asp-action="ManageUserRoles" asp-route-userId="@Model.Id" style="width:auto" class="btn btn-primary">
        Manage Roles
    </a>




</form>