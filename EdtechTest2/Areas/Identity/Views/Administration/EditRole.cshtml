@model EditRoleViewModel
@{
    ViewData["Title"] = "EditRole";
}

<h1>EditRole</h1>

<div class="col">
    <form >
        <div class="col">
            <div asp-validation-summary="All" class="text-danger">
            </div>
            <div class="form-group">
                <label asp-for="Id"></label>
                <input disabled asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="RoleName"></label>
                <input disabled asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>




        </div>
    </form>
    <div class="col">

        <br />
        <div class="row">
            <a class="btn btn-primary m-2" asp-controller="Administration" asp-area="Identity" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id">Add Or remove User</a>

            <a asp-action="ListRoles" class="btn btn-primary m-2">Back</a>
        </div>

        <div class="row p-4">
            @if (Model.Users.Any())
            {
                @foreach (var user in Model.Users)
                {

                    <div class="card m-2" style="width: 18rem;">
                        <div class="card-header">
                            @user
                        </div>

                    </div>


                }

            }
            else
            {
                <h4 class="p-4 m-4" align="center"> No User In This Role</h4>

            }
        </div>




    </div>



</div>
