
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>


<div id="vue-app">

    <h1>Post Form</h1>

    <form method="POST" v-on:submit.prevent="processForm">
        <label for="fname">First name:</label><br>
        <input type="text" v-model="name"><br>
        <label for="lname">email:</label><br>
        <input type="text" v-model="email"><br><br>
        <label for="photo">
            Photo
        </label>
        <input type="file" name="file" v-on:change="fileUp">
        <div>
            <div v-if="uploading">
                @*<div class="spinner-border" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>*@
                <div class="progress">
                    <div class="progress-bar progress-bar-striped" role="progressbar"  v-bind:style="'width:' +progress+'%'" aria-valuenow="12" aria-valuemin="0" aria-valuemax="100"></div>
                </div>

            </div>

        </div>

        <input type="submit" value="Submit">
    </form>

   
</div>



@section Scripts{

    <script src="~/js/PostForm.js"></script>
}